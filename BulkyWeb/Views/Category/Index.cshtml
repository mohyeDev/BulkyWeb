@model List<Category>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Name))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="btn-group w-75 m-1" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id=""
                               class="btn btn-primary btn-sm rounded-pill shadow-sm fw-bold text-white mx-2">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </a>
                        </div>
                        <div class="btn-group w-75 m-1" role="group">
                            <a asp-controller="Category" asp-action="Delete" asp-route-id=""
                               class="btn btn-danger btn-sm rounded-pill shadow-sm fw-bold text-white mx-2">
                                <i class="bi bi-trash-fill me-1"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>