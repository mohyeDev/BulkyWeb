@page
@model BulkyWeb_Razp_Temp.Pages.Categories.EditModel

<form method="post">
    <input asp-for="category.CategoryId" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row">
            <label asp-for="category.Name"></label>
          
            <input asp-for="category.Name" type="text" class="form-control" />
            <span asp-validation-for="category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="category.DisplayOrder"></label>
            <input asp-for="category.DisplayOrder" type="number" class="form-control" />
            <span asp-validation-for="category.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <button asp-page="/Categories/Edit" type="submit" class="btn btn-outline-primary form-control">Update</button>
            </div>
            <div class="col-6">
                <a asp-controller="/Categories/Index" asp-action="Index" class="btn btn-outline-secondary form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {

    @{
        <partial category.Name="_ValidationScriptsPartial" />
    }
}

